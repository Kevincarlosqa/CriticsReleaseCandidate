<h2 class="block text-gray-700 text-xl font-bold mb-2 mx-auto ">Inicie Sesion</h2>
<div class="w-full max-w-xs mx-auto">
<div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="mb-4">
    <%= f.label :email, class:"block text-gray-700 text-sm font-bold mb-2" %>
    <div >
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", placeholder: "Email" %>
    </div>
  </div>

  <div class="mb-4">
    <%= f.label :password, class:"block text-gray-700 text-sm font-bold mb-2" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "shadow appearance-none border border-red-500 rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline", placeholder:"******************" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="mb-4">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class:"bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
  </div>
<% end %>
</div>
</div>

<%= render "devise/shared/links" %>
