<p style="color: green"><%= notice %></p>

<%= render @company %>

<div>
  <%= link_to "Edit this company", edit_company_path(@company) %> |
  <%= link_to "Back to companies", companies_path %>

  <%= button_to "Destroy this company", @company, method: :delete %>
</div>

<%= form_with(url: company_critics_path(params[:id]), method:"post") do |form| %>
  <div>
    <%= form.text_field :title, placeholder: "Critic title" %>
  </div>

  <div>
    <%= form.text_field :body, placeholder: "Critic body" %>
  </div>

   <div>
    <%= form.submit "Create critic" %>
  </div>
<%end%>
 <%# button_to "Destroy this critic", @company.critics(params[:id]), method: :delete %>

<div>
