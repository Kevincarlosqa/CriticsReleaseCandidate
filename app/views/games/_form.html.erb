<%= form_with(model: game) do |form| %>
  <% if game.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
        <% game.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, class:"block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :name ,class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"%>
  </div>

  <div>
    <%= form.label :summary, class:"block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_area :summary, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div>
    <%= form.label :release_date, class:"block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.date_field :release_date, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div>
    <%= form.label :rating, class:"block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :rating, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div>
    <%= form.label :category, class:"block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :category, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>


  <div>
    <%= form.label :parent_id, class:"block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :parent_id, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div>
  <%if game.image.attached?%>
  <%= image_tag game.image %>
   <%end%>
  </div>

  <div>
  <%= form.label :cover %>
  <br>
  <%= form.file_field :image, accept: 'image/png,image/jpeg'%>
  <% game.errors.full_messages_for(:image).each do |message|%>
  <span>
  <%= message%>
  </span>
  <%end%>
</div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
